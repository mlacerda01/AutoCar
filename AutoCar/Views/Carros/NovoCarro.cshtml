@model AutoCar.Models.Carro
@{
    ViewData["Title"] = "Novo Carro";
}

<h1>Novo Carro</h1>
<div class="row">
    <div class="col-md-4">

        <form asp-action="NovoCarro" method="post">

            <div class="form-group">
                <label asp-for="Nome"></label><br />
                <input class="form-control-lg" asp-for="Nome" />
            </div>

            <div class="form-group">
                <label asp-for="Marca"></label><br />
                <input class="form-control-lg" asp-for="Marca" />
            </div>

            <div class="form-group">
                <label asp-for="Ano"></label><br />
                <input class="form-control-lg" asp-for="Ano" />
            </div>

            <div class="row">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "Carros")" class="btn btn-primary">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>